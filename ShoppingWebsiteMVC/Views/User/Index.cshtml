@model ShoppingWebsiteMVC.Models.User

@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row text-center mt-4 mb-5">
    <div class="col-sm-4"></div>
    <div class="form-row card col-sm-4 mt-2 p-3" id="logincard">
        <h4 class="card-title">LOGIN HERE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserId,"Username/Email",new { @class="float-left"})
            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control",@placeholder="Your EmailId" } })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "float-left" } )
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password",@required="required" } })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Login<i class="fa fa-sign-in"></i></button>
        </div>
        <div class="card-footer">
            <p>
                <span class="fa fa-user-plus"></span>New User?
            </p>
            @Html.ActionLink("Sign up", "Register", null, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
